[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[colors]
background = #262729
foreground = #fafafa
red = #a51f1c
foreground-alt = #555
primary = #ffb52a
secondary = #e60053

[bar/bla]
width = 100%
height = ${env:X_BAR_HEIGHT:30}
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = xft:Sans:pixelsize=8;1

modules-left = xmonad
modules-center = date
modules-right = pulseaudio xbacklight wifi cpu memory battery1 battery2

tray-position = right
tray-padding = 2

dpi = ${xrdb:Xft.dpi:96}

override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

bottom = false

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/xbacklight]
type = internal/xbacklight

format = <label>
format-prefix = "bl "
format-prefix-foreground = ${colors.red}
label = %percentage%%

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu "
format-prefix-foreground = ${colors.red}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "mem "
format-prefix-foreground = ${colors.red}
label = %percentage_used%%

[module/wifi]
type = internal/network
interface = wlp58s0
interval = 3.0
format-connected-prefix = "wifi "
format-connected-prefix-foreground = ${colors.red}
label-connected = %essid%
label-disconnected =

[module/date]
type = internal/date
interval = 5

date = "%A %{F#a51f1c}-%{F-} %B %d"
time = %H%{F#a51f1c}:%{F-}%M

format-prefix-foreground = ${colors.foreground-alt}

label = %date% %{F#a51f1c}-%{F-} %time%

[module/pulseaudio]
type = internal/pulseaudio

label = %percentage%%
prefix = "vol "

label-volume = ${module/pulseaudio.label}
label-volume-foreground = ${root.foreground}
format-volume = <label-volume>
format-volume-prefix = ${module/pulseaudio.prefix}
format-volume-prefix-foreground = ${colors.red}

label-muted = ${module/pulseaudio.label}
label-muted-foreground = #666
format-muted = <label-muted>
format-muted-prefix = ${module/pulseaudio.prefix}
format-muted-prefix-foreground = ${colors.red}

# TODO: Replace the two modules by a script module displaying the value of
#       /sys/class/power_supply/BAT*/capacity

[module/battery1]
type = internal/battery

battery = BAT0
adapter = AC
label = %percentage%%
prefix = "bat "

format-charging-prefix = ${module/battery1.prefix}
format-charging-prefix-foreground = ${colors.red}
format-discharging-prefix = ${module/battery1.prefix}
format-discharging-prefix-foreground = ${colors.red}
format-full-prefix = ${module/battery1.prefix}
format-full-prefix-foreground = ${colors.red}

label-charging = ${module/battery1.label}
label-discharging = ${module/battery1.label}
label-full = ${module/battery1.label}

[module/battery2]
inherit = module/battery1

battery = BAT1

format-charging-prefix =
format-discharging-prefix =
format-full-prefix =

[module/xmonad]
type = custom/script
exec = tail -F /tmp/.xmonad.log
exec-if = [ -p /tmp/.xmonad.log ]
tail = true

; vim:ft=dosini
