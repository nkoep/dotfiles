[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[colors]
background = #262729
foreground = #fafafa
red = #a51f1c
foreground-alt = #555
primary = #ffb52a
secondary = #e60053

[bar/bla]
width = 100%
height = 30
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = xft:Sans:pixelsize=8;1

modules-left = xmonad
modules-center = date
modules-right = xbacklight pulseaudio cpu memory wlan battery temperature

tray-position = right
tray-padding = 2

;wm-restack = bspwm

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

bottom = false

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/xbacklight]
type = internal/xbacklight

format = <label>
label = BL %percentage:2%%

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp58s0
interval = 3.0
format-connected-underline = #9f78e1
label-connected = wifi %essid%
format-disconnected-underline = <label>
label-disconnected = wifi

[module/date]
type = internal/date
interval = 5

date = "%A %{F#a51f1c}-%{F-} %B %d"
time = %H%{F#a51f1c}:%{F-}%M

format-prefix-foreground = ${colors.foreground-alt}

label = %date% %{F#a51f1c}-%{F-} %time%

[module/pulseaudio]
type = internal/pulseaudio

label = VOL %percentage%%

format-volume = <label-volume>
label-volume = ${module/pulseaudio.label}
label-volume-foreground = ${root.foreground}

format-muted = <label-muted>
label-muted = ${module/pulseaudio.label}
label-muted-foreground = #666

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1

format-charging = <label-charging>
format-charging-underline = #ffb52a

format-discharging = <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-underline = #f50a4d
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

[module/xmonad]
type = custom/script
exec = tail -F /tmp/.xmonad.log
exec-if = [ -p /tmp/.xmonad.log ]
tail = true

; vim:ft=dosini
