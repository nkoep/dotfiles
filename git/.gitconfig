[user]
	name = Niklas Koep
	email = niklas.koep@gmail.com
[core]
	excludesfile = ~/.gitexcludes
[alias]
	am = commit --amend -c HEAD
	as = annex sync --content
	br = branch
	co = checkout
	ds = diff --staged
	lg = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	ph = push origin HEAD
	puh = push upstream HEAD
	rev = rev-parse --short
	st = status
  c = commit -s
  d = diff
  rb = for-each-ref --sort=committerdate refs/heads/
[include]
  path = ~/.work/gitconfig
[init]
	defaultBranch = main
