# Set mod key to Alt (mod1)
set $mod Mod1

# Font for window titles
font pango:monospace 8

# Terminal
set $term kitty

# Theme colors from environment variables
set_from_resource $fg i3wm.color7 #ffffff
set_from_resource $primary i3wm.color1 #ffff00

# Window borders
default_border pixel 2
default_floating_border pixel 2
smart_borders on

# Window gaps and spacing
gaps inner 4
gaps outer 4

# No padding around polybar
for_window [class="Polybar"] border pixel 0

# Colors (normal_border, focused_border, indicator, text, background)
client.focused          #ffff00 #ffff00 #000000 #ffff00 #ffff00
client.focused_inactive #ffffff #ffffff #000000 #ffffff #ffffff
client.unfocused        #ffffff #ffffff #000000 #ffffff #ffffff
client.urgent           #ff0000 #ff0000 #ffffff #ff0000 #ff0000

# Behavior settings
focus_follows_mouse no
mouse_warping none

# Start polybar
exec_always --no-startup-id polybar-restart

# Floating dialog windows
for_window [window_type="dialog"] floating enable
for_window [window_role="dialog"] floating enable

# Keybindings

# Applications
bindsym $mod+p exec --no-startup-id "rofi -show drun"

# Window management
bindsym $mod+Shift+Return exec $term
bindsym $mod+Shift+c kill

# Change focus
bindsym $mod+h focus left
bindsym $mod+l focus right
bindsym $mod+k focus up
bindsym $mod+j focus down

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right
bindsym $mod+Shift+k move up
bindsym $mod+Shift+j move down

# Split orientation
bindsym $mod+u split toggle

# Toggle fullscreen
bindsym $mod+f fullscreen toggle

# Cycle through layouts
bindsym $mod+space layout toggle splith splitv tabbed

# Workspaces
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Restart i3
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exit
