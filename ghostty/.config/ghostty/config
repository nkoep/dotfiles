# General settings
shell-integration = none
gtk-titlebar = false
app-notifications = false

# Font
font-size = 9
font-family = monospace

# Cursor
cursor-style-blink = false

# Tab style
gtk-tabs-location = top

# Keybindings
keybind = ctrl+cmd+f=toggle_fullscreen

keybind = performable:ctrl+c=copy_to_clipboard
keybind = performable:cmd+c=copy_to_clipboard

keybind = ctrl+v=paste_from_clipboard
keybind = cmd+v=paste_from_clipboard

# Font sizing
keybind = ctrl+plus=increase_font_size:1
keybind = cmd+plus=increase_font_size:1

keybind = ctrl+minus=decrease_font_size:-1
keybind = cmd+minus=decrease_font_size:-1

keybind = ctrl+shift+equal=reset_font_size

# Tab navigation
keybind = ctrl+t=new_tab
keybind = cmd+t=new_tab

keybind = ctrl+tab=next_tab
keybind = ctrl+page_down=next_tab

keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+page_up=previous_tab

keybind = ctrl+shift+page_down=move_tab:1
keybind = ctrl+shift+page_up=move_tab:-1

# Split navigation
keybind = ctrl+enter=new_split:down
keybind = cmd+enter=new_split:down

keybind = ctrl+j=goto_split:next
keybind = ctrl+k=goto_split:previous

# Theme
theme = catppuccin-latte
