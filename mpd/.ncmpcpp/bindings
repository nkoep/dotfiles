# Miscellaneous
def_key "q"
  stop
  quit
def_key "5"  # Disable playlist editor cause it crashes ncmpcpp
 dummy
def_key "ctrl-l"
  dummy

# Regular navigation
def_key "j"
  scroll_down
def_key "k"
  scroll_up
def_key "h"
  previous_column
def_key "l"
  next_column
def_key "ctrl-u"
  page_up
def_key "ctrl-d"
  page_down
def_key "g"
  move_home
def_key "G"
  move_end

# Search navigation
def_key "n"
  next_found_item
def_key "N"
  previous_found_item

# Lyrics
def_key "L"
  show_lyrics
